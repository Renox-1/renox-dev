---
const { id, title } = Astro.props;
---
<section id={id} class="my-12">
  <h2 class="text-2xl font-semibold mb-6 relative">
    <span class="inline-block pr-2">{title}</span>
    <span class="block w-12 h-1 bg-blue-600 mt-1 rounded"></span>
  </h2>
  <div class="space-y-4">
    <slot />
  </div>
</section>
